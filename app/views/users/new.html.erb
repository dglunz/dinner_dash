<%= form_for(@user) do |f| %>
	<p><%= f.label :name %>
	  <%= f.text_field :name %></p>

	<p><%= f.label :display_name %>
	  <%= f.text_field :display_name %></p>

	<p><%= f.label :email %>
	  <%= f.text_field :email %></p>

	<p><%= f.label :password %>
	  <%= f.password_field :password %></p>

	<p><%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation %></p>

	<%= f.submit 'Submit' %>
<% end %>
