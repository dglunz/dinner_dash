<h1 class= "text-center">Menu</h1>
<div class='text-center'>
  <%= search_form_for @search do |f| %>
    <%= hidden_field_tag :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, class: "input-sm search-field" %>
    <%= f.submit "search", name: nil, class: "btn btn-success"  %>
  <% end %>
</div>


<div class='col-md-6'>
  <h3 class='text-center'>Drinks</h3>
  <%= render partial: @items.active.drinks %>
</div>

<div class='col-md-6'>
  <h3 class="text-center">Eats</h3>
  <%= render partial: @items.active.eats %>
</div>
